<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="615dp"
    android:layout_gravity="center"
    android:background="#F0F0F0"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="Close"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvtimeformat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins"
            android:text="TIME"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/poppins"
            android:text="Predefined time settings for when creating task." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#58C2C9"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/back_gradient"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/date"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins"
                    android:text="All-Day"
                    android:textColor="#585858"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvallday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00AM"
                    android:textColor="#585858"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#58C2C9"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/back_gradient"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/date"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins"
                    android:text="Morning"
                    android:textColor="#585858"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvmorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00AM"
                    android:textColor="#585858"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#58C2C9"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/back_gradient"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/date"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins"
                    android:text="Afternoon"
                    android:textColor="#585858"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvafternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00AM"
                    android:textColor="#585858"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#58C2C9"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/back_gradient"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/date"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins"
                android:text="Evening"
                android:textColor="#585858"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvevening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00AM"
                android:textColor="#585858"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customButton3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttobback"
        android:text="Confirm"
        android:backgroundTint="#50C2C9"
        android:textColor="#585858" />

</LinearLayout>

