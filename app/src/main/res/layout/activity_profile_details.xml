<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDetailsActivity">

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/picCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">


            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ratan_tata"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/taskCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="60dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:layout_marginLeft="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="vertical">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="139"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:textColor="@color/white"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Task"
                  android:textSize="14sp"
                  android:gravity="center"
                  android:layout_marginTop="6dp"
                  android:textColor="@color/white"/>
          </LinearLayout>
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
              android:orientation="vertical">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="19"
                  android:gravity="center"
                  android:textSize="18sp"
                  android:textColor="@color/white"/>
                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Completed"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                  android:textSize="14sp"
                  android:textColor="@color/white"/>
          </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_below="@+id/taskCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shivam Pandey"
            android:layout_weight="1"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/addPic"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Add Photo"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/add_pic_bg"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/graph"
        android:layout_below="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/purple_500"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphical View"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginLeft="18dp"/>
    </LinearLayout>

<!--    Graph to put here-->
    <TextView
        android:layout_below="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No chart data available"
        android:layout_margin="30dp"
        android:textColor="@color/orange"/>

</RelativeLayout>